<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.color.pink.dao.ArchiveMapper">
  <resultMap id="BaseResultMap" type="com.color.pink.pojo.Archive">
    <id column="title" jdbcType="VARCHAR" property="title" />
    <result column="a_order" jdbcType="INTEGER" property="order" />
    <result column="img_url" jdbcType="VARCHAR" property="imgUrl" />
    <association property="articles" select="com.color.pink.dao.ArticleMapper.selectArticleByArchive" column="title"/>
  </resultMap>

  <resultMap id="BaseResultMap2" type="com.color.pink.pojo.Archive">
    <id column="title" jdbcType="VARCHAR" property="title" />
    <result column="a_order" jdbcType="INTEGER" property="order" />
    <result column="img_url" jdbcType="VARCHAR" property="imgUrl" />
    <association property="articles" select="com.color.pink.dao.ArticleMapper.selectArticleByArchive2" column="title"/>
  </resultMap>

  <select id="selectAll" resultMap="BaseResultMap">
    SELECT title, img_url, a_order
    FROM archive ORDER BY a_order
  </select>

  <select id="selectAll2" resultMap="BaseResultMap2">
    SELECT title, img_url, a_order
    FROM archive ORDER BY a_order
  </select>

  <insert id="addArchive" parameterType="com.color.pink.pojo.Archive">
    INSERT INTO archive VALUES
    (#{title}, #{imgUrl}, #{order})
  </insert>
</mapper>